<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_teste_2.MainPage"
             Title="Senac - SP - Lapa / Tito ** TI25"
             BackgroundColor="Yellow">
    <StackLayout BindingContext="{x:Reference slider}">
        <BoxView Color="RosyBrown" Opacity="{Binding Value}"/>
        <Label Text="{Binding Value, StringFormat='Valor = {0:F2}'}" Opacity="{Binding Value}" HorizontalOptions="Center" VerticalOptions="Center" x:Name="label" FontSize="Large" FontAttributes="Bold" />
        <Slider x:Name="slider"/>
    </StackLayout>



</ContentPage>
